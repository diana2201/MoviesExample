<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_movieAdapter"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_titleAdapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Hunger Games"
            style="@style/Base.TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/txt_genresAdapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comedy, Action"
            style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/ic_calendar"
                android:layout_alignParentLeft="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_date_range_black_24dp"
                android:tint="#616060"/>

            <TextView
                android:id="@+id/txt_yearAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@id/ic_calendar"
                android:paddingTop="3dp"
                />

            <ImageView
                android:id="@+id/ic_star"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star_black_24dp"
                android:tint="#d7c011"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_toLeftOf="@id/ic_star"
                android:id="@+id/txt_rateAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.4"
                android:paddingRight="5dp"
                android:paddingTop="3dp"/>

        </RelativeLayout>






    </LinearLayout>

</LinearLayout>